{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* =============================
       File Layout
    ============================== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* =============================
       Environment Settings
    ============================== */
    "module": "commonjs",
    "target": "esnext",
    "types": [],
    "esModuleInterop": true,

    /* =============================
       Outputs
    ============================== */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* =============================
       Strictness & Safety
    ============================== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noEmitOnError": true,

    /* =============================
       Module Resolution
    ============================== */
    "moduleDetection": "force",

    /* =============================
       Critical Hackathon Fix
       (Mongoose + TS compatibility)
    ============================== */
    "skipLibCheck": true
  },

  /* =============================
     Included Files
  ============================== */
  "include": ["src", ".env"]
}
